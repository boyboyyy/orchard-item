<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.orchard.mapper.GoodStyleMapper">
    <update id="updateGoodStyle" parameterType="com.orchard.entity.Goodstype">
        update goodstype
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="remark != null and remark != '' ">remark = #{remark},</if>
            <if test="updateTime != null ">update_time = #{updateTime},</if>
            <if test="updateUser != null and updateUser != '' ">update_user = #{updateUser},</if>
        </set>
        where id = #{id}
    </update>
    <delete id="goodStyleDelet">
        delete from goodstype
                <where>
                    and id = #{id}
                </where>
    </delete>
    <select id="goodsPageQusery" resultType="com.orchard.entity.Goodstype">
        select * from goodstype
                <where>
                    <if test="name != null and name != ''">
                        and name like concat('%',#{name},'%')
                    </if>
                </where>
                order by create_time desc
    </select>
<!--    <select id="goodStypeIdBygoodName" resultType="java.lang.Integer">-->
<!--        select gs.id from goodstype gs-->
<!--            left join goods g ON g.goodsType = gs.id-->
<!--        where gs.name = #{name}-->
<!--    </select>-->
    <select id="pageAll" resultMap="GoodsResultMap">
        SELECT
            id, name
        FROM goodstype
        ORDER BY create_time DESC
    </select>
    <select id="getGoodsStyleName" resultType="java.lang.String">
        select gs.name from goodstype gs
        <where>
            <if test="begin != null">
                and gs.create_time &gt; #{begin}
            </if>
            <if test="end != null">
                and gs.create_time &lt; #{end}
            </if>

        </where>
    </select>
    <!-- 定义结果映射 -->
    <resultMap id="GoodsResultMap" type="com.orchard.entity.Goodstype">
        <id column="id" property="id" />
        <result column="name" property="name" />
    </resultMap>

</mapper>